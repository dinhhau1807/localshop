@using localshop.Core.Common
@model ForgotPasswordViewModel

@{
    ViewBag.Title = "Forgot password";
}

@section thirdPartyCss {
    <style>
        .parsley-errors-list {
            color: lightcoral;
            margin-top: -20px;
            margin-bottom: 20px;
        }

        .parsley-success {
            border: solid 1px lightgreen !important;
        }

        .parsley-error {
            border: solid 1px lightcoral !important;
        }
    </style>
}

@section thirdPartyJs {
    <script src="~/Assets/client/js/plugins/parsley.js"></script>

    <script>
        $(document).ready(function () {
             toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-bottom-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "3000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };

            if ("@TempData["ErrorMessage"]" != "") {
                toastr["error"]("@TempData["ErrorMessage"]");
            }
        });
    </script>
}

<div class="breadcrumb-area bg-img" style="background-image:url(@ImageLinks.BackgrounBreadcrumb);">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h2>Account</h2>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
</div>

<div class="pt-85 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a href="javascript:void(0)">
                            <h4>Reset password</h4>
                        </a>
                    </div>
                    <div class="login-form-container">
                        <div class="login-register-form">
                            @using (Html.BeginForm("forgotPassword", "account", FormMethod.Post, new { data_parsley_validate = "", no_validate = "" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", required = "", type="email" })

                                <div class="button-box">
                                    <div class="text-right">
                                        <a href="@Url.Action("login", "account")" class="mr-4"><i class="la la-arrow-left"></i> Return to login</a>
                                        <button type="submit">Reset password</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
