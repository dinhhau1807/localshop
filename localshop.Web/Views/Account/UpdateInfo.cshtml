@using localshop.Core.Common
@model localshop.Core.DTO.UpdateProfileDTO

@{
    ViewBag.Title = "Update info";
}

@section thirdPartyCss {
    <style>
        .parsley-errors-list {
            margin-bottom: 10px;
        }
    </style>
}

@section thirdPartyJs {
    @Scripts.Render("~/content/client/js/validation")
}

<div class="breadcrumb-area bg-img" style="background-image:url(@ImageLinks.BackgrounBreadcrumb);">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h2>@ViewBag.Title</h2>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
</div>

<div class="my-account-wrapper pt-100 pb-100 section-padding-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                @if (TempData["UpdateInfo"] as string == "true")
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        Let's <strong>update your information</strong> to get the best experience on our shop!
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                <!-- My Account Page Start -->
                <div class="myaccount-page-wrapper">
                    <!-- My Account Tab Menu Start -->
                    <div class="row">
                        <div class="col-lg-3 col-md-4">
                            <div class="myaccount-tab-menu nav" role="tablist">
                                <a href="@Url.Action("index", "account")"><i class="fa fa-dashboard"></i> Dashboard</a>
                                <a href="@Url.Action("orders", "account")"><i class="fa fa-cart-arrow-down"></i> Orders</a>
                                <a href="@Url.Action("info", "account")"><i class="fa fa-map-marker"></i> Account info</a>
                                <a href="#update-info" class="active"><i class="fa fa-user"></i> Update info</a>
                                <a href="@Url.Action("changepassword", "account")"><i class="fa fa-user"></i> Change Password</a>
                            </div>
                        </div>
                        <!-- My Account Tab Menu End -->
                        <!-- My Account Tab Content Start -->
                        <div class="col-lg-9 col-md-8">
                            <div class="tab-content" id="myaccountContent">
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade show active" id="update-info" role="tabpanel">
                                    <div class="myaccount-content">
                                        <h3>Update info</h3>
                                        <div class="account-details-form">
                                            @using (Html.BeginForm("updateinfo", "account", FormMethod.Post, new { enctype = "multipart/form-data", data_parsley_validate = "", novalidate = "" }))
                                            {
                                                @Html.AntiForgeryToken()
                                                <div class="row">
                                                    <div class="col-lg-6">
                                                        <div class="single-input-item">
                                                            @Html.LabelFor(m => m.FirstName)
                                                            @Html.TextBoxFor(m => m.FirstName, new { parsley_trigger = "change", required = "" })
                                                        </div>
                                                    </div>

                                                    <div class="col-lg-6 form-group">
                                                        <div class="single-input-item">
                                                            @Html.LabelFor(m => m.LastName)
                                                            @Html.TextBoxFor(m => m.LastName, new { parsley_trigger = "change", required = "" })
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="single-input-item">
                                                    @Html.LabelFor(m => m.PhoneNumber)
                                                    @Html.TextBoxFor(m => m.PhoneNumber, new { parsley_trigger = "change", required = "" })
                                                </div>

                                                <div class="single-input-item">
                                                    @Html.LabelFor(m => m.Country)
                                                    @Html.TextBoxFor(m => m.Country, new { parsley_trigger = "change", required = "" })
                                                </div>

                                                <div class="single-input-item">
                                                    @Html.LabelFor(m => m.Zip)
                                                    @Html.TextBoxFor(m => m.Zip, new { parsley_trigger = "change", required = "" })
                                                </div>

                                                <div class="single-input-item">
                                                    @Html.LabelFor(m => m.City)
                                                    @Html.TextBoxFor(m => m.City, new { parsley_trigger = "change", required = "" })
                                                </div>

                                                <div class="single-input-item">
                                                    @Html.LabelFor(m => m.State)
                                                    @Html.TextBoxFor(m => m.State, new { parsley_trigger = "change" })
                                                </div>

                                                <div class="single-input-item">
                                                    @Html.LabelFor(m => m.Address1)
                                                    @Html.TextBoxFor(m => m.Address1, new { parsley_trigger = "change", required = "" })
                                                </div>

                                                <div class="single-input-item">
                                                    @Html.LabelFor(m => m.Address2)
                                                    @Html.TextBoxFor(m => m.Address2, new { parsley_trigger = "change" })
                                                </div>

                                                <div class="single-input-item">
                                                    <button class="check-btn sqr-btn">Save Changes</button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <!-- Single Tab Content End -->
                            </div>
                        </div> <!-- My Account Tab Content End -->
                    </div>
                </div> <!-- My Account Page End -->
            </div>
        </div>
    </div>
</div>
