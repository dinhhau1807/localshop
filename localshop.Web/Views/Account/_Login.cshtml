@model LoginViewModel

@using (Html.BeginForm("login", "account", FormMethod.Post, new { data_parsley_validate = "", no_validate = "" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("returnUrl", new { returnUrl = ViewBag.ReturnUrl })

    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", required = "", type = "email" })
    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", required = "" })

    <div class="button-box">
        <div class="login-toggle-btn">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
            <a href="@Url.Action("forgotPassword", "account")">Forgot Password?</a>
        </div>
        <div class="text-right">
            <button type="submit">Login</button>
        </div>
    </div>
}
