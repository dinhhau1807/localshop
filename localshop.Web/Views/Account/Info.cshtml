@using localshop.Core.Common
@model localshop.Domain.Entities.ApplicationUser

@{
    ViewBag.Title = "Info";
}

@section thirdPartyJs {
    <!-- Controller -->
    @Scripts.Render("~/content/client/js/account/info")
}

@Html.Hidden("saveSuccess", TempData["SaveSuccess"])

<div class="breadcrumb-area bg-img" style="background-image:url(@ImageLinks.BackgrounBreadcrumb);">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <h2>@ViewBag.Title</h2>
            <ul>
                <li>
                    <a href="/">Home</a>
                </li>
                <li class="active">@ViewBag.Title</li>
            </ul>
        </div>
    </div>
</div>

<div class="my-account-wrapper pt-100 pb-100 section-padding-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <!-- My Account Page Start -->
                <div class="myaccount-page-wrapper">
                    <!-- My Account Tab Menu Start -->
                    <div class="row">
                        <div class="col-lg-3 col-md-4">
                            <div class="myaccount-tab-menu nav" role="tablist">
                                <a href="@Url.Action("index", "account")"><i class="fa fa-dashboard"></i> Dashboard</a>
                                <a href="@Url.Action("orders", "account")"><i class="fa fa-cart-arrow-down"></i> Orders</a>
                                <a href="#account-info" class="active"><i class="fa fa-map-marker"></i> Account info</a>
                                <a href="@Url.Action("updateinfo", "account")"><i class="fa fa-user"></i> Update info</a>
                                <a href="@Url.Action("changepassword", "account")"><i class="fa fa-user"></i> Change Password</a>
                            </div>
                        </div>
                        <!-- My Account Tab Menu End -->
                        <!-- My Account Tab Content Start -->
                        <div class="col-lg-9 col-md-8">
                            <div class="tab-content" id="myaccountContent">
                                <!-- Single Tab Content Start -->
                                <div class="tab-pane fade show active" id="account-info" role="tabpanel">
                                    <div class="myaccount-content">
                                        <h3>Account information</h3>
                                        <address>
                                            <p><strong>@Model.FullName</strong></p>
                                            <p>
                                                @Model.Address1, @Model.Address2 <br>
                                                @Model.Country, @Model.City, @Model.State <br />
                                                @Model.Zip
                                            </p>
                                            <p>Mobile: @Model.PhoneNumber</p>
                                            <p>Email: @Model.Email</p>
                                        </address>
                                    </div>
                                </div>
                                <!-- Single Tab Content End -->
                            </div>
                        </div> <!-- My Account Tab Content End -->
                    </div>
                </div> <!-- My Account Page End -->
            </div>
        </div>
    </div>
</div>
