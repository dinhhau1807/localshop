                        <a href="/"><img src="@ImageLinks.LogoLight" width="250" alt="logo"></a>
                        <div class="footer-contact-content-2">
                            <div class="footer-info-hm5">
                                <span>Phone</span>
                                <p>@ConfigurationManager.AppSettings["Phone"]</p>
                            </div>
                            <div class="footer-info-hm5">
                                <span>Mail</span>
                                <p><a href="mailto:@ConfigurationManager.AppSettings["Mail"]">@ConfigurationManager.AppSettings["Mail"]</a></p>
                            </div>
                            <div class="footer-social-hm5">
                                <span>Follow us</span>
                                <ul>
                                    <li><a href="@ConfigurationManager.AppSettings["Facebook"]" target="_blank">Facebook</a></li>
                                    <li><a href="@ConfigurationManager.AppSettings["Twitter"]" target="_blank">Twitter</a></li>
                                    <li><a href="@ConfigurationManager.AppSettings["Github"]" target="_blank">Github</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 col-12 col-sm-6">
