                        <div class="footer-title-4">
                            <h3>Shop Info</h3>
                        </div>
                        <div class="footer-list-4">
                            <ul>
                                <li>@Html.ActionLink("Wishlist", "index", "wishlist")</li>
                                <li>@Html.ActionLink("Checkout", "index", "checkout")</a></li>
                                <li>@Html.ActionLink("Cart", "index", "cart")</li>
                                <li>@Html.ActionLink("Shopping Detail", "orders", "account")</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-12 col-sm-6">
                    <div class="footer-widget mb-40 ml-200">
                        <div class="footer-title-4">
                            <h3>Support</h3>
                        </div>
                        <div class="footer-list-4">
                            <ul>
                                <li>@Html.ActionLink("Contact info", "index", "contact")</li>
                                <li>@Html.ActionLink("Tracking order", "index", "tracking")</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-12 col-sm-6">
                    <div class="footer-widget mb-40 f-right">
                        <div class="footer-title-4">
                            <h3>About</h3>
                        </div>
                        <div class="footer-list-4">
                            <ul>
                                <li><a href="https://github.com/dinhhau1807/localshop" target="_blank">localshop corporation</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer-bottom pt-20 pb-20 border-top-3">
        <div class="container-fluid">
            <div class="row align-items-center justify-content-center">
                <div class="col-lg-6 col-md-6 col-sm-6 text-center">
                    <div class="copyright-2">
                        <p>Copyright © <a href="@Url.Action("index", "home")">localshop</a>. All Right Reserved</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
