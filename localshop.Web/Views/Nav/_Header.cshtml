@using localshop.Core.Common
@using System.Configuration

<!-- Navigation -->
<header class="header-area header-padding-4">
    <div class="main-header-wrap">
        <div class="header-top pt-15 pb-15 bg-black-3">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-lg-4">
                        <div class="welcome">
                            <p>
                                Welcome to localshop
                            </p>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="setting-wrap-2">
                            <div class="setting-content2-right">
                                @Html.ActionLink("Compare", "index", "compare")
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @Html.ActionLink("Wishlist", "index", "wishlist")
                                    @Html.ActionLink("My Account", "index", "account")
                                    if (User.IsInRole(RoleNames.Root) ||
                                        User.IsInRole(RoleNames.Administrator) ||
                                        User.IsInRole(RoleNames.Modifier))
                                    {
                                        <a href="@Url.Action("index", "dashboard", new { Area="Admin" })">Dashboard</a>
                                    }

                                    using (Html.BeginForm("logout", "account", FormMethod.Post, new { @class = "ml-4 d-inline-block" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button class="rounded btn-dark" type="submit">Logout</button>
                                    }
                                }
                                else
                                {
                                    @Html.ActionLink("Sign in", "login", "account", new { returnUrl = Request.Url.AbsolutePath }, null)
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-middle border-top-2 pt-30 pb-30 bg-black-3">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-lg-2">
                        <div class="logo">
                            <a href="@Url.Action("index", "home")"><img src="@ImageLinks.LogoLight" width="200" alt="logo"></a>
                        </div>
                    </div>
                    <div class="col-lg-9">
                        <div class="header-contact-search-wrap">
                            <div class="header-contact">
                                <ul>
                                    <li><i class="la la-phone"></i>@ConfigurationManager.AppSettings["Phone"]</li>
                                    <li><i class="la la-comments-o"></i><a href="mailto:@ConfigurationManager.AppSettings["Mail"]">@ConfigurationManager.AppSettings["Mail"]</a></li>
                                </ul>
                            </div>
                            <div class="search-style-3">
                                <form>
                                    <div class="form-search-3">
                                        @using (Html.BeginForm("index", "shop", FormMethod.Get))
                                        {
                                            <input id="search" class="input-text" name="search" placeholder="Search product" type="search">
                                            <button>
                                                <i class="la la-search"></i>
                                            </button>
                                        }
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Cart -->
                    <div class="col-lg-1">
                        <div class="cart-wrap cart-wrap-3">
                            <button class="cart-active">
                                <i class="la la-shopping-cart"></i> <br>
                                <span class="mini-cart-price-3">$0</span>
                                <span class="count-style-3">0</span>
                            </button>
                            <div class="shopping-cart-content">
                                <div class="shopping-cart-top">
                                    <h4>Your Cart</h4>
                                    <a class="cart-close" href="javascript:void(0)"><i class="la la-close"></i></a>
                                </div>
                                <ul class="cart-list">
                                    @*<li class="single-shopping-cart">
                                            <div class="shopping-cart-img">
                                                <a href="#"><img alt="" src="/Assets/client/images/cart/cart-1.jpg"></a>
                                                <div class="item-close">
                                                    <a href="#"><i class="sli sli-close"></i></a>
                                                </div>
                                            </div>
                                            <div class="shopping-cart-title">
                                                <h4><a href="#">Golden Easy Spot Chair.</a></h4>
                                                <span>$99.00</span>
                                            </div>
                                            <div class="shopping-cart-delete">
                                                <a href="#"><i class="la la-trash"></i></a>
                                            </div>
                                        </li>*@
                                </ul>
                                <div class="shopping-cart-bottom">
                                    <div class="shopping-cart-total">
                                        <h4>Subtotal <span class="shop-total">$0</span></h4>
                                    </div>
                                    <div class="shopping-cart-btn btn-hover default-btn text-center">
                                        <a class="black-color" href="@Url.Action("index", "cart")">View cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- Sticky bar -->
        <div class="header-bottom sticky-bar">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="stick-active col-xl-2 col-lg-3 d-none">
                        <div class="logo">
                            <a href="@Url.Action("index", "home")"><img src="@ImageLinks.LogoDark" width="190" alt="logo"></a>
                        </div>
                    </div>
                    <div class="stick-main col-md-12 d-flex justify-content-center">
                        <div class="main-menu menu-common-style menu-lh-4 menu-margin-5 menu-font-2">
                            <nav>
                                <ul>
                                    <li class="angle-shape">
                                        <a href="@Url.Action("index", "shop")">Shop</a>
                                    </li>
                                    <li class="angle-shape">
                                        <a href="@Url.Action("index", "shop", new { category="Smartphone" })">Smartphone</a>
                                    </li>
                                    <li class="angle-shape">
                                        <a href="@Url.Action("index", "shop", new { category="Tablet" })">Tablet</a>
                                    </li>
                                    <li class="angle-shape">
                                        <a href="@Url.Action("index", "shop", new { category="Laptop" })">Laptop</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                    <!-- Cart -->
                    <div class="stick-active col-xl-2 col-lg-2 d-none">
                        <div class="header-right-wrap">
                            <div class="cart-wrap common-style ml-35">
                                <button class="cart-active cart-3">
                                    <span class="mini-cart-price">$0</span>
                                    <i class="la la-shopping-cart"></i>
                                </button>
                                <div class="shopping-cart-content">
                                    <div class="shopping-cart-top">
                                        <h4>Your Cart</h4>
                                        <a class="cart-close" href="#"><i class="la la-close"></i></a>
                                    </div>
                                    <ul class="cart-list">
                                        @*<li class="single-shopping-cart">
                                                <div class="shopping-cart-img">
                                                    <a href="#"><img alt="" src="/Assets/client/images/cart/cart-1.jpg"></a>
                                                    <div class="item-close">
                                                        <a href="#"><i class="sli sli-close"></i></a>
                                                    </div>
                                                </div>
                                                <div class="shopping-cart-title">
                                                    <h4><a href="#">Golden Easy Spot Chair.</a></h4>
                                                    <span>$99.00</span>
                                                </div>
                                                <div class="shopping-cart-delete">
                                                    <a href="#"><i class="la la-trash"></i></a>
                                                </div>
                                            </li>*@
                                    </ul>
                                    <div class="shopping-cart-bottom">
                                        <div class="shopping-cart-total">
                                            <h4>Subtotal <span class="shop-total">$0</span></h4>
                                        </div>
                                        <div class="shopping-cart-btn btn-hover default-btn text-center">
                                            <a class="black-color" href="@Url.Action("index", "cart")">View cart</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Mobile header -->
    <div class="header-small-mobile">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-6">
                    <div class="mobile-logo">
                        <a href="@Url.Action("index", "home")">
                            <img alt="" src="@ImageLinks.LogoDark" width="180">
                        </a>
                    </div>
                </div>

                <!-- Cart mobile -->
                <div class="col-6">
                    <div class="header-right-wrap">
                        <div class="cart-wrap common-style">
                            <button class="cart-active">
                                <i class="la la-shopping-cart"></i>
                                <span class="count-style">0 Items</span>
                            </button>
                            <div class="shopping-cart-content">
                                <div class="shopping-cart-top">
                                    <h4>Your Cart</h4>
                                    <a class="cart-close" href="#"><i class="la la-close"></i></a>
                                </div>
                                <ul class="cart-list">
                                    @*<li class="single-shopping-cart">
                                            <div class="shopping-cart-img">
                                                <a href="#"><img alt="" src="/Assets/client/images/cart/cart-3.jpg"></a>
                                                <div class="item-close">
                                                    <a href="#"><i class="sli sli-close"></i></a>
                                                </div>
                                            </div>
                                            <div class="shopping-cart-title">
                                                <h4><a href="#">Golden Easy Spot Chair.</a></h4>
                                                <span>$99.00</span>
                                            </div>
                                            <div class="shopping-cart-delete">
                                                <a href="#"><i class="la la-trash"></i></a>
                                            </div>
                                        </li>*@
                                </ul>
                                <div class="shopping-cart-bottom">
                                    <div class="shopping-cart-total">
                                        <h4>Subtotal <span class="shop-total">$0</span></h4>
                                    </div>
                                    <div class="shopping-cart-btn btn-hover default-btn text-center">
                                        <a class="black-color" href="@Url.Action("index", "cart")">View cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mobile-off-canvas">
                            <a class="mobile-aside-button" href="#"><i class="la la-navicon la-2x"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Mobile navigation -->
<div class="mobile-off-canvas-active">
    <a class="mobile-aside-close"><i class="la la-close"></i></a>
    <div class="header-mobile-aside-wrap">
        <div class="mobile-search">
            @using (Html.BeginForm("index", "shop", FormMethod.Get, new { @class = "search-form" }))
            {
                <input type="text" name="search" placeholder="Search product…">
                <button class="button-search"><i class="la la-search"></i></button>
            }
        </div>
        <div class="mobile-menu-wrap">
            <!-- mobile menu start -->
            <div class="mobile-navigation">
                <!-- mobile menu navigation start -->
                <nav>
                    <ul class="mobile-menu">
                        <li>@Html.ActionLink("Shop", "index", "shop")</li>
                        <li>@Html.ActionLink("Smartphone", "index", "shop", new { category = "Smartphone" }, null)</li>
                        <li>@Html.ActionLink("Tablet", "index", "shop", new { category = "Tablet" }, null)</li>
                        <li>@Html.ActionLink("Laptop", "index", "shop", new { category = "Laptop" }, null)</li>
                    </ul>
                </nav>
                <!-- mobile menu navigation end -->
            </div>
            <!-- mobile menu end -->
        </div>
        <div class="mobile-curr-lang-wrap">
            <div class="single-mobile-curr-lang">
                @Html.ActionLink("Compare", "index", "compare", null, new { @class = "mobile-account-active" })
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="single-mobile-curr-lang">
                    @Html.ActionLink("Wishlist", "index", "wishlist")
                </div>
                <div class="single-mobile-curr-lang">
                    @Html.ActionLink("My Account", "index", "account")
                </div>
                if (User.IsInRole(RoleNames.Root) ||
                User.IsInRole(RoleNames.Administrator) ||
                User.IsInRole(RoleNames.Modifier))
                {
                    <div class="single-mobile-curr-lang">
                        <a href="@Url.Action("index", "dashboard", new { Area="Admin" })">Dashboard</a>
                    </div>
                }

                <div class="single-mobile-curr-lang text-left">
                    <a href="javascript:void(0)" onclick="$(this).next().submit()">Logout</a>
                    @using (Html.BeginForm("logout", "account", FormMethod.Post, new { @class = "ml-4 d-inline-block" }))
                    {
                        @Html.AntiForgeryToken()
                    }
                </div>
            }
            else
            {
                <div class="single-mobile-curr-lang">
                    @Html.ActionLink("Sign in", "login", "account", new { returnUrl = Request.Url.AbsolutePath }, null)
                </div>
            }
        </div>
        <div class="mobile-social-wrap">
            <a class="facebook" href="#"><i class="ti-facebook"></i></a>
            <a class="twitter" href="#"><i class="ti-twitter-alt"></i></a>
            <a class="pinterest" href="#"><i class="ti-pinterest"></i></a>
            <a class="instagram" href="#"><i class="ti-instagram"></i></a>
            <a class="google" href="#"><i class="ti-google"></i></a>
        </div>
    </div>
</div>
