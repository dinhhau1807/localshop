            <table id="datatable" class="table table-bordered table-striped nowrap">
                <thead>
                    <tr>
                        <th>Product name</th>
                        <th>SKU</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                <img class="mr-1" src="@(product.Images.Count>0?product.Images.First().Path:"")" alt="@product.Name" height="60" width="60" style="object-fit:scale-down;">
                                <p class="d-inline-block align-middle mb-0">
                                    <a href="#" class="d-inline-block align-middle mb-0 product-name">@product.Name</a>
                                    <br />
                                    <span class="text-muted font-13">@(product.Category != null ? product.Category.Name : "")</span>
                                </p>
                            </td>
                            <td>@product.Sku</td>
                            <td>
                                <strong class="text-danger">$@product.DiscountPrice</strong>
                                <br />
                                <del class="text-muted">$@product.Price</del>
                            </td>
                            <td>@product.Quantity</td>
                            <td><span class="badge badge-success">@(product.Status != null ? product.Status.Name : "")</span></td>
                            <td class="text-center">
                                <a href="#" class="btn btn-outline-primary btn-sm ls-product-edit"><i class="far fa-edit"></i></a>
                                <a href="#" class="btn btn-outline-danger btn-sm ls-product-delete"><i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td>
                            <img class="mr-1" src="~/assets/admin/images/big/bg.jpg" alt="" height="60" width="60" style="object-fit:scale-down;">
