@model localshop.Core.DTO.SpecialFeaturedDTO

@{
    ViewBag.Title = "special featured";
}

@section topbar {
    @Html.Action("topbar", "nav", new { header = NavigationHeader.SepecialFeatured })
}

@section thirdPartyCss {
    <!-- Notification css (Toastr) -->
    @Styles.Render("~/content/admin/css/toastr")
}

@section thirdPartyJs {
    @Scripts.Render("~/content/admin/js/validation", "~/content/admin/js/toastr")

    <!-- CKFinder -->
    <script src="~/Assets/plugins/CKFinderScripts/ckfinder.js"></script>

    <!-- Controller -->
    @Scripts.Render("~/content/admin/js/homePage/sepcialFeatured");
}

@Html.Hidden("saveSuccess", TempData["SaveSuccess"])
@Html.Hidden("errorMessage", TempData["ErrorMessage"])

<div class="row">
    <div class="col">
        @using (Html.BeginForm("specialfeatured", "homepage", FormMethod.Post, new { role = "form", data_parsley_validate = "", novalidate = "" }))
        {
            @Html.AntiForgeryToken()
            <div class="card-box">
                <div class="row">
                    <div class="col-12">
                        <div>
                            <h4 class="mt-0 header-title">Product information</h4>
                            <p class="text-muted font-14">
                                Add product information
                            </p>
                        </div>

                        @Html.HiddenFor(m => m.Id)

                        <div class="form-group row">
                            @Html.LabelFor(m => m.Title, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", required = "" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(m => m.Price, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", required = "", data_parsley_decimal = "" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(m => m.Link, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Link, new { @class = "form-control", required = "" })
                            </div>
                        </div>

                        <div class="text-right">
                            <a href="@Url.Action("specialfeatured", "homepage")" class="btn btn-light">Cancel</a>
                            <button class="btn btn-primary">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-box">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex">
                            <div>
                                <h4 class="mt-0 header-title">Background image</h4>
                                <p class="text-muted font-14">
                                    Add background image
                                </p>
                            </div>
                            <button type="button" class="btn btn-primary ml-auto align-self-start btn-choose-background-image">Choose background</button>
                        </div>
                        @Html.HiddenFor(m => m.BackgroundImage)
                        <div class="d-flex flex-wrap justify-content-center" id="background-image">
                            @*<div class="position-relative">
                                    <img src="~/Assets/admin/images/small/img-1.jpg" alt="" style="max-width:100%" />
                                    <a href="javascript:void(0)" class="position-absolute px-1 bg-light clear-image" style="top:0;left:0;"><span class="fas fa-times"></span></a>
                                </div>*@
                        </div>
                    </div>
                </div> <!-- end row -->
            </div> <!-- end card-box -->

            <div class="card-box">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex">
                            <div>
                                <h4 class="mt-0 header-title">Product image</h4>
                                <p class="text-muted font-14">
                                    Add product image
                                </p>
                            </div>
                            <button type="button" class="btn btn-primary ml-auto align-self-start btn-choose-product-image">Choose image</button>
                        </div>
                        @Html.HiddenFor(m => m.ProductImage)
                        <div class="d-flex flex-wrap justify-content-center" id="product-image">
                            @*<div class="position-relative">
                                    <img src="~/Assets/admin/images/small/img-1.jpg" alt="" style="max-width:100%" />
                                    <a href="javascript:void(0)" class="position-absolute px-1 bg-light clear-image" style="top:0;left:0;"><span class="fas fa-times"></span></a>
                                </div>*@
                        </div>
                    </div>
                </div> <!-- end row -->
            </div> <!-- end card-box -->
        }
    </div>
</div>