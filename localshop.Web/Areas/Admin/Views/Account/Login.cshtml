@model localshop.Areas.Admin.ViewModels.LoginViewModel

@{
    ViewBag.Title = "login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>localshop - Electronic store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App css -->
    <link href="~/Assets/admin/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/admin/css/app.css" rel="stylesheet" type="text/css" />
    <link href="~/Assets/admin/css/icons.min.css" rel="stylesheet" type="text/css" />
</head>


<body class="authentication-bg">

    <div class="home-btn d-none d-sm-block">
        <a class="btn btn-outline-primary btn-sm" href="~/">Back to localshop</a>
    </div>

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="text-center">
                        <a href="/admin">
                            <span><img src="~/Assets/admin/images/logo-dark.png" alt="" height="22"></span>
                        </a>
                        <p class="text-muted mt-2 mb-4">localshop dashboard manager</p>
                    </div>
                    <div class="card shadow">

                        <div class="card-body p-4">

                            <div class="text-center mb-4">
                                <h4 class="text-uppercase mt-0">Sign In</h4>
                            </div>

                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                                @Html.AntiForgeryToken()
                                @Html.Hidden("returnUrl", (object)ViewBag.ReturnUrl)

                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "", placeholder = "Enter your email", type = "email" })
                                </div>
                                <div class="form-group mb-3">
                                    @Html.LabelFor(m => m.Password)
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", required = "", placeholder = "Enter your email", type = "password" })
                                </div>
                                <div class="form-group mb-3">
                                    <div class="custom-control custom-checkbox">
                                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input", id = "checkbox-signin" })
                                        <label class="custom-control-label" for="checkbox-signin">Remember me?</label>
                                    </div>
                                </div>


                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary btn-block" type="submit"> Log In </button>
                                </div>
                            }
                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p> <a href="@Url.Action("forgotpassword", "account", new { area="" })" class="text-muted ml-1"><i class="fa fa-lock mr-1"></i>Forgot your password?</a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- Vendor js -->
    @Scripts.Render("~/content/admin/js/vendor")

    <!-- App js -->
    @Scripts.Render("~/content/admin/js/app", "~/content/modernizr")
    @Scripts.Render("~/content/removeAds")
</body>
</html>